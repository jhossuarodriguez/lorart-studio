---
import Header from "@/components/HeaderSection.astro";
import Footer from "@/components/FooterSection.astro";

interface Props {
	title?: string;
}

const title = Astro.props.title;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="relative">
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		color: #333;
		scroll-behavior: smooth;
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}

	@media (prefers-reduced-motion) {
		html,
		body {
			scroll-behavior: auto;
		}
	}
</style>
