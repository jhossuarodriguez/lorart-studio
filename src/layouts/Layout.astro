---
import Header from "@/components/HeaderSection.astro";
import Footer from "@/components/FooterSection.astro";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";

interface Props {
	title?: string;
}

const title = Astro.props.title;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/" />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style>
	*,
	*::before,
	*::after {
		box-sizing: border-box;
		padding: 0;
		margin: 0;
	}
	html,
	body {
		color: #242424cc;
		scroll-behavior: smooth;
		font-family:
			poppins,
			sans-serif,
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}

	@media (prefers-reduced-motion) {
		html,
		body {
			scroll-behavior: auto;
		}
	}
</style>
